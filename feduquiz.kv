            axis: 0, 0, 1
            origin: self.pos if self.sentiment == 'pos' else (self.pos[0]+self.width, self.pos[1]+self.height)
        Scale:
            origin: self.x + 0.5*self.width, self.y + 0.5*self.height
            x: self.scale
            y: self.scale
    canvas.after:
        PopMatrix:


