<PressColor>
    orientation: 'horizontal'
    size: self.minimum_size
    spacing: 20
    pre_label: pre
    size_hint: None, None
    font_size: 40

    Label:
        pos_hint: {'center_x': .5, 'center_y': .5}
        id: pre
        font_name: 'PressStart2P-Regular'
